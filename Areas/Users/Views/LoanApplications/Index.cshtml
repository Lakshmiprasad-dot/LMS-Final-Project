@using Microsoft.AspNetCore.Identity
@model IEnumerable<LMS.Models.LoanApplication>
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Index";
}
<center>
<h1 style="color:blue;">Loan Applications</h1>
</center>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LoanApplicationId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationHolderName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationHolderEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IfscCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoanType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoanAmount)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            if (@UserManager.GetUserName(User) == item.ApplicationHolderEmail)
            { 
                <tr>
                    <td>
                    @Html.DisplayFor(modelItem => item.LoanApplicationId)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationHolderName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationHolderEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IfscCode)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoanType.LoanName)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoanAmount)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.LoanApplicationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LoanApplicationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LoanApplicationId">Delete</a>
            </td>
        </tr>
        }
}
    </tbody>
</table>
