@model IEnumerable<LMS.Models.RateOfInterest>

@{
    ViewData["Title"] = "Index";
}

<center>
    <h1 style="color:blue;">Rate of Interests List</h1>
</center>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr style="background-color:aquamarine;">
            <th>
                @Html.DisplayNameFor(model => model.LoanType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoanAmount1)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr style="background-color:azure;">
                <td>
                    @Html.DisplayFor(modelItem => item.LoanType.LoanName)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoanAmount1)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.RateOfInterestId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RateOfInterestId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RateOfInterestId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
