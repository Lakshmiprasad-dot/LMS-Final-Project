@model LMS.Models.ApplicationStatus

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Application Status</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ApplicationID" class="control-label"></label>
                <input asp-for="ApplicationID" class="form-control" />
                <span asp-validation-for="ApplicationID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoanApplicationId" class="control-label">Application Holder name</label>
                <select asp-for="LoanApplicationId" class ="form-control" asp-items="ViewBag.LoanApplicationId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Status List</a> &nbsp; |
    <a asp-area="Admins" asp-controller="LoanApplications" asp-action="Index">Back To Loan Applications  List </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
